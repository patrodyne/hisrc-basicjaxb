<?xml version="1.0" encoding="UTF-8"?>
<dialog
	xmlns="http://www.swixml.org/2007/swixml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.swixml.org/2007/swixml ../../../../../main/resources/swixml.xsd"

	size="${el.dimensionScale(window,0.75,0.25)}"
	layout="BorderLayout"
	title="Test Dialog"
	defaultCloseOperation="JDialog.DISPOSE_ON_CLOSE"
>

	<panel constraints="BorderLayout.CENTER">
	
		<label labelFor="testValue" text="Test" />
		<textfield
			id="textField"
			bindWith="testValue"
			columns="20"
			text="text"
		/>
		
		<button text="Submit" action="submit" />
	</panel>

</dialog>
