<?xml version="1.0" encoding="UTF-8" ?>
<panel
	xmlns="http://www.swixml.org/2007/swixml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.swixml.org/2007/swixml ../../../../../main/resources/swixml.xsd"

	layout="BorderLayout"
>

	<tabbedpane constraints="BorderLayout.CENTER">

		<panel name="XML Source" layout="BorderLayout">
			<RTextScrollPane>
				<filetextarea syntaxEditingStyle="text/xml" source="xml/xinclude.xml"></filetextarea>
			</RTextScrollPane>

		</panel>

		<panel name="XML Fragment Included" layout="BorderLayout">
			<RTextScrollPane>
				<filetextarea syntaxEditingStyle="text/xml" source="xml/fragments.xml"></filetextarea>
			</RTextScrollPane>

		</panel>


		<panel name="Java Source" layout="BorderLayout">
			<RTextScrollPane>
				<filetextarea syntaxEditingStyle="text/java" source="examples/legacy/XInclude.java"></filetextarea>
			</RTextScrollPane>
		</panel>

	</tabbedpane>

</panel>
