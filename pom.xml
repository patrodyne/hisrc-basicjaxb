				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>${maven-javadoc-plugin.version}</version>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<phase>verify</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<additionalOptions>
								<additionalOption>--link-modularity-mismatch=info</additionalOption>
							</additionalOptions>
							<detectLinks>true</detectLinks>
							<doclint>all,-missing</doclint>
							<failOnError>false</failOnError>
							<links>
								<link>https://javadoc.io/doc/com.vividsolutions/jts/${jts.version}/</link>
								<link>https://javadoc.io/doc/jakarta.activation/jakarta.activation-api/${activation-api.version}/</link>
								<link>https://javadoc.io/doc/jakarta.xml.bind/jakarta.xml.bind-api/${jaxb-api.version}/</link>
								<link>https://javadoc.io/doc/org.apache.ant/ant/${ant.version}/</link>
								<link>https://javadoc.io/doc/org.glassfish.jaxb/codemodel/${jaxb-imp.version}/</link>
								<link>https://javadoc.io/doc/org.glassfish.jaxb/jaxb-core/${jaxb-imp.version}/</link>
								<link>https://javadoc.io/doc/org.glassfish.jaxb/jaxb-runtime/${jaxb-imp.version}/</link>
								<link>https://javadoc.io/doc/org.glassfish.jaxb/jaxb-xjc/${jaxb-imp.version}/</link>
								<link>https://javadoc.io/doc/com.google.code.javaparser/javaparser/${javaparser.version}/</link>
								<link>https://javadoc.io/doc/org.junit.jupiter/junit-jupiter-api/${junit-jupiter.version}/</link>
								<link>https://javadoc.io/doc/xmlunit/xmlunit/${xmlunit.version}/</link>
								<!-- HiSrc links -->
								<link>https://javadoc.io/doc/org.patrodyne.jvnet/hisrc-basicjaxb-ant/latest</link>
								<link>https://javadoc.io/doc/org.patrodyne.jvnet/hisrc-basicjaxb-tools/latest</link>
								<link>https://javadoc.io/doc/org.patrodyne.jvnet/hisrc-basicjaxb-plugins/latest</link>
								<link>https://javadoc.io/doc/org.patrodyne.jvnet/hisrc-basicjaxb-runtime/latest</link>
								<link>https://javadoc.io/doc/org.patrodyne.jvnet/hisrc-basicjaxb-testing/latest</link>
							</links>
							<quiet>false</quiet>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-enforcer-plugin</artifactId>
				<version>${maven-enforcer-plugin.version}</version>
				<executions>
					<execution>
						<id>enforce-java-maven</id>
						<?m2e ignore?>
						<goals>
							<goal>enforce</goal>
						</goals>
						<configuration>
							<rules>
								<requireJavaVersion>
									<version>${maven.compiler.release}</version>
								</requireJavaVersion>
								<requireMavenVersion>
									<version>${maven-min.version}</version>
								</requireMavenVersion>
								<requirePluginVersions>
									<message>Best Practice is to always define plugin versions!</message>
									<banSnapshots>false</banSnapshots>
								</requirePluginVersions>
							</rules>    
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
