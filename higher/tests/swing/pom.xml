<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.patrodyne.jvnet</groupId>
		<artifactId>hisrc-basicjaxb-higher-tests</artifactId>
		<version>3.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>hisrc-basicjaxb-test-swing</artifactId>
	<packaging>jar</packaging>
	<name>HiSrc BasicJAXB - Test [swing]</name>
	<properties>
		<root.basedir>${basedir}/../../..</root.basedir>
	</properties>
	<dependencies>
		<dependency>
			<groupId>org.patrodyne.jvnet</groupId>
			<artifactId>hisrc-basicjaxb-runtime</artifactId>
		</dependency>
		<dependency>
			<groupId>org.patrodyne.jvnet</groupId>
			<artifactId>hisrc-basicjaxb-swixml</artifactId>
		</dependency>
		<dependency>
			<groupId>org.patrodyne.jvnet</groupId>
			<artifactId>hisrc-higherjaxb-maven-plugin</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.patrodyne.jvnet</groupId>
			<artifactId>hisrc-higherjaxb-maven-plugin-testing</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<defaultGoal>test</defaultGoal>

		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.xjb</include>
					<include>**/*.xsd</include>
					<include>**/*.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>target/generated-sources/xjc</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
			</resource>
		</resources>

		<plugins>
			<!-- mvn hisrc-higherjaxb:help -Ddetail=true -->
			<!-- mvn hisrc-higherjaxb:generate -->
			<plugin>
				<groupId>org.patrodyne.jvnet</groupId>
				<artifactId>hisrc-higherjaxb-maven-plugin</artifactId>
				<dependencies>
					<dependency>
						<groupId>org.patrodyne.jvnet</groupId>
						<artifactId>hisrc-basicjaxb-swixml</artifactId>
						<version>${project.version}</version>
					</dependency>
				</dependencies>
				<configuration>
					<extension>true</extension>
					<verbose>true</verbose>
					<debug>true</debug>
					<args>
						<arg>-no-header</arg>
						<arg>-XbeanInfo</arg>
						<arg>-XbeanInfo-targetPackage=..infos</arg>
						<arg>-Xswing</arg>
						<arg>-Xswing-beanInfoPackage=..infos</arg>
						<arg>-Xswing-sourceWindow=file:${basedir}/src/main/resources/SchemasWindow.xml</arg>
						<arg>-Xswing-targetPackage=org.example.swing</arg>
						<arg>-XhashCode</arg>
						<arg>-Xequals</arg>
						<arg>-XtoString</arg>
						<arg>-XfluentAPI</arg>
					</args>
					<plugins>
						<plugin>
							<groupId>org.patrodyne.jvnet</groupId>
							<artifactId>hisrc-basicjaxb-plugins</artifactId>
						</plugin>
					</plugins>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
