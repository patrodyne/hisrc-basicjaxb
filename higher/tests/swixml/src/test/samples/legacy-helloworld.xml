<?xml version="1.0" encoding="UTF-8"?>
<frame
	xmlns="http://www.swixml.org/2007/swixml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.swixml.org/2007/swixml ../../../../../../swixml/src/main/resources/swixml.xsd"

	plaf="javax.swing.plaf.metal.MetalLookAndFeel"
	plafTheme="org.swixml.plaf.metal.MatteMetalTheme(75,1.00)"
	size="650,400"
	layout="BorderLayout"
	title="Hello SWIXML World"
	defaultCloseOperation="EXIT_ON_CLOSE"
>

	<panel constraints="CENTER">
		<label labelFor="tf" font="*-BOLD-*" foreground="a180-100-100" text="Hello World!" />
		<textfield id="tf" columns="20" text="Swixml" />
		<button text="Click Here" action="submit" />
	</panel>

	<panel constraints="SOUTH">
		<label font="*-BOLD-300%" text="Clicks:" />
		<label font="*-BOLD-300%" id="cnt" />
	</panel>

</frame>
